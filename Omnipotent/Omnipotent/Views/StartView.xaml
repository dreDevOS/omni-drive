<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ei="clr-namespace:TaxiApp.MarkupExtensions"
             x:Class="Omnipotent.Views.StartView">
    <ContentPage.Content>


        <AbsoluteLayout>

            <Image AbsoluteLayout.LayoutBounds="0,0,1,1"
                   AbsoluteLayout.LayoutFlags="All"
                   x:Name="image"
                   Aspect="AspectFill"
                   Source="{}"/>

            <StackLayout Orientation="Horizontal"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,0.8,0.1"
                         AbsoluteLayout.LayoutFlags="All"
                         BackgroundColor="White">

                <Label Text="TAXI"
                       FontSize="Default"
                       TextColor="Black"
                       FontAttributes="Bold"/>

                <Label Text="New cab"
                       FontSize="Default"
                       TextColor="Black"
                       Margin="2,0,0,0"
                       FontAttributes="Italic"/>
            </StackLayout>

            <StackLayout  AbsoluteLayout.LayoutBounds="0,0,1,110"
                          AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional">
                <Button Text="Log In " FontAttributes="Bold" FontSize="Large" TextColor="White"
                                 BackgroundColor="Black" BorderColor="Black" Opacity="0.5" Command="{Binding LognCommand}"/>

                <Button Text=" Register" FontAttributes="Bold" FontSize="Large" TextColor="White"
                               BackgroundColor="Black"
                               BorderColor="Black" Opacity="0.5" 
                               Command="{Binding RegisterCommand}"/>


            </StackLayout>


        </AbsoluteLayout>
        
        
    </ContentPage.Content>
    
    
</ContentPage>